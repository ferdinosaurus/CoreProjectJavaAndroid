<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.sqlite.SqliteDetailActivity"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_sqliteDetail_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id value"
        />
    <TextView
        android:id="@+id/tv_sqliteDetail_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nama value"
        />
    <TextView
        android:id="@+id/tv_sqliteDetail_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email value"
        />
    <TextView
        android:id="@+id/tv_sqliteDetail_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="phone value"
        />
    <TextView
        android:id="@+id/tv_sqliteDetail_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="alamat value"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <Button
            android:id="@+id/btn_sqliteDetail_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="update"
            />
        <Button
            android:id="@+id/btn_sqliteDetail_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="delete"
            />
    </LinearLayout>

</LinearLayout>